manifest {
    author = 'Vivek Appadurai | vivek.appadurai@regionh.dk'
    description = 'ProtoPsych PGS - PGS pipeline developed for the LF grant'
    mainScript = 'main.nf'
}

executor {
    name = 'slurm'
    submitRateLimit = '1 sec'
    pollInterval = '1 min'
    queueStatInterval = '5 min'
}

env {
    NXF_OPTS = "-Xms2g -Xmx4g"
}

process {
    withLabel: big_mem {
        cpus = 16
        memory = 16.GB
        time = '8h'
    }
}

process {
    withLabel: mod_mem {
        cpus = 1
        memory = 8.GB
        time = '2h'
    }
}

process {
    withLabel: low_mem {
        cpus = 1
        memory = 2.GB
        time = '1h'
    }
}